# Configuration for a x230 running non-Qubes
BOARD=x230

CONFIG_CRYPTSETUP=y
CONFIG_FLASHROM=y
CONFIG_GPG=y
CONFIG_KEXEC=y
CONFIG_UTIL_LINUX=y
CONFIG_LVM2=y
CONFIG_MBEDTLS=n
CONFIG_PCIUTILS=y
CONFIG_POPT=y
CONFIG_QRENCODE=n
CONFIG_TPMTOTP=n
CONFIG_XEN=y
CONFIG_XEN_VERSION=4.8
CONFIG_DROPBEAR=y
CONFIG_BUSYBOX=y

CONFIG_LINUX_USB=y

CONFIG_LINUX_E1000E=y

export CONFIG_LINUX_USB_COMPANION_CONTROLLER=y
export CONFIG_BOOTSCRIPT=/bin/autoboot-init
export CONFIG_BOOT_REQ_HASH=n
export CONFIG_BOOT_REQ_ROLLBACK=n
export CONFIG_BOOT_KERNEL_ADD="intel_iommu=on"
export CONFIG_BOOT_KERNEL_REMOVE="quiet"
export CONFIG_BOOT_DEV="/dev/sda3"
export CONFIG_USB_BOOT_DEV="/dev/sdb1"
export CONFIG_BOOT_RESPECT_MOD_SIG_ENFORCE=y
